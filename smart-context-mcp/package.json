{
  "name": "smart-context-mcp",
  "version": "1.0.0",
  "type": "module",
  "bin": {
    "smart-context-mcp": "dist/index.js",
    "smart-context-gen-languages": "dist/cli/generate-languages-config.js",
    "smart-context-build-markdown-wasm": "dist/cli/build-markdown-wasm.js",
    "smart-context-warmup-embeddings": "dist/cli/warmup-embeddings.js"
  },
  "files": [
    "dist",
    "node_modules/tree-sitter-wasms",
    "LICENSE",
    "README.md"
  ],
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "pretest": "npm run build",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest dist --runInBand",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest dist --coverage",
    "test:coverage:orchestration": "NODE_OPTIONS=--experimental-vm-modules jest dist --runInBand --coverage --collectCoverageFrom=\"dist/orchestration/**/*.js\" --coveragePathIgnorePatterns=\"/dist/tests/\"",
    "test:markdown-wasm-cli": "node scripts/test-markdown-wasm-cli.mjs",
    "build": "tsc",
    "build:markdown-wasm": "node dist/cli/build-markdown-wasm.js",
    "start": "tsx src/index.ts"
  },
  "keywords": [
    "modelcontextprotocol",
    "mcp",
    "context",
    "vibe-coding",
    "developer tools",
    "ai-assisted coding",
    "smart context",
    "editor",
    "file analysis"
  ],
  "author": "devkwan",
  "license": "MIT",
  "description": "A Model Context Protocol (MCP) enabled tool for AI-assisted coding and intelligent file analysis.",
  "devDependencies": {
    "@types/babel__parser": "^7.0.0",
    "@types/babel__traverse": "^7.28.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/debounce": "^1.2.4",
    "@types/fast-levenshtein": "^0.0.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.16",
    "@types/resolve": "^1.20.6",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "@babel/parser": "^7.28.5",
    "@babel/traverse": "^7.28.5",
    "@babel/types": "^7.28.5",
    "@google/generative-ai": "^0.2.1",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "@xenova/transformers": "^2.8.0",
    "better-sqlite3": "^12.5.0",
    "chokidar": "^3.5.3",
    "fast-levenshtein": "^2.0.6",
    "ignore": "^5.2.0",
    "lru-cache": "^10.2.0",
    "mdast-util-to-string": "^3.2.0",
    "mammoth": "^1.4.24",
    "xlsx": "^0.18.5",
    "remark-mdx": "^3.0.1",
    "remark-parse": "^11.0.0",
    "resolve": "^1.22.11",
    "tree-sitter-wasms": "^0.1.13",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "web-tree-sitter": "^0.25.10",
    "xxhashjs": "^0.2.2"
  }
}
