{
  "name": "smart-context-mcp",
  "version": "4.0.0",
  "type": "module",
  "bin": {
    "smart-context-mcp": "dist/index.js",
    "smart-context-gen-languages": "dist/cli/generate-languages-config.js"
  },
  "files": [
    "dist",
    "node_modules/tree-sitter-wasms",
    "LICENSE",
    "README.md"
  ],
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest dist --runInBand",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest dist --coverage",
    "build": "tsc",
    "start": "tsx src/index.ts"
  },
  "keywords": [
    "modelcontextprotocol",
    "mcp",
    "context",
    "vibe-coding",
    "developer tools",
    "ai-assisted coding",
    "smart context",
    "editor",
    "file analysis"
  ],
  "author": "devkwan",
  "license": "MIT",
  "description": "A Model Context Protocol (MCP) enabled tool for AI-assisted coding and intelligent file analysis.",
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/backup/",
      "/dist/tests/performance/"
    ],
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/fast-levenshtein": "^0.0.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.16",
    "@types/resolve": "^1.20.6",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "better-sqlite3": "^9.4.0",
    "chokidar": "^3.5.3",
    "fast-levenshtein": "^2.0.6",
    "ignore": "^5.2.0",
    "lru-cache": "^10.2.0",
    "resolve": "^1.22.11",
    "tree-sitter-wasms": "^0.1.13",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "web-tree-sitter": "^0.25.10",
    "xxhashjs": "^0.2.2"
  }
}
